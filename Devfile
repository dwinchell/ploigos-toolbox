  - name: reference-quarkus-mvn
    source:
      location: 'git@github.com:ploigos-reference-apps/reference-quarkus-mvn.git'
      startPoint: main
      type: git
components:
  - id: ms-python/python/latest
    preferences:
      python.globalModuleInstallation: true
    type: chePlugin
  - mountSources: true
    memoryLimit: 1024Mi
    type: dockerimage
