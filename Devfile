        containerPath: /home/jboss/.venv
    alias: ploigos
    image: 'quay.io/dwinchell_redhat/ploigos-workspace:0.1'
commands:
  - name: 1. Run
    actions:
      - workdir: '${CHE_PROJECTS_ROOT}/python-hello-world'
        type: exec
        command: python -m venv .venv && . .venv/bin/activate && python hello-world.py
        component: python
  - name: Debug current file
    actions:
      - referenceContent: |
          {
            "version": "0.2.0",
            "configurations": [
              {
                "name": "Python: Current File",
                "type": "python",
                "request": "launch",
                "program": "${file}",
                "console": "internalConsole"
              }
            ]
          }
        type: vscode-launch

